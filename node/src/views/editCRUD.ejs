    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">

            <!-- <div class="col-6">
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Nhap email">
                </div>
            </div> -->
            <form action="/put-crud" method="POST">
                <!-- goi link tu phia sever -->
                <div class="form-row">
                    <div class="col-12 mt-3"><b>Edit user information: </b></div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">First Name</label>
                        <!-- phai co thuoc tin name="email" de phia server side nhan duoc -->
                        <input type="text" class="form-control" placeholder="Input your firstName" name="firstName"
                            value="<%=user.firstName%>" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">LastName</label>
                        <input type="text" class="form-control" placeholder="Input your lastName" name="lastName"
                            value="<%=user.lastName%>" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" name="address" placeholder="97 Man Thien...."
                        value="<%=user.address%>" />
                </div>
                <!-- <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                </div> -->
                <input type="text" name="id" value="<%=user.id%>" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>